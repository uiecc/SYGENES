{# templates/student/profile.html.twig #}
{% extends 'base_dashboard.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <!-- En-tête de la page -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
        <div class="bg-custom-orange text-white p-4">
            <h1 class="text-xl md:text-2xl font-bold">Mon Profil</h1>
        </div>
    </div>

    <!-- Informations du profil -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Colonne de gauche: Photo et informations de base -->
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="p-6 flex flex-col items-center">
                <div class="w-40 h-40 rounded-full overflow-hidden mb-4 border-4 border-gray-200">
                    {% if student.profilePhoto %}
                        <img src="{{ asset('uploads/profile_photos/' ~ student.profilePhoto) }}" alt="Photo de profil" class="w-full h-full object-cover">
                    {% else %}
                        <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                    {% endif %}
                </div>
                <h2 class="text-xl font-semibold text-center">{{ student.firstName }} {{ student.lastName }}</h2>
                <p class="text-sm text-gray-500 mb-4">{{ student.matricule }}</p>
            </div>

            <div class="border-t border-gray-200 p-6">
                <div class="space-y-3">
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Niveau</h3>
                        <p class="font-semibold">{{ student.level.name }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Filière</h3>
                        <p class="font-semibold">{{ student.level.field.name }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Colonne centrale: Informations personnelles -->
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="bg-gray-100 p-4">
                <h2 class="font-semibold">Informations personnelles</h2>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Nom complet</h3>
                        <p class="font-semibold">{{ student.firstName }} {{ student.lastName }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Email</h3>
                        <p class="font-semibold">{{ student.email }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Téléphone</h3>
                        <p class="font-semibold">{{ student.phoneNumber ?: 'Non renseigné' }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Matricule</h3>
                        <p class="font-semibold">{{ student.matricule }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Date de naissance</h3>
                        <p class="font-semibold">{{ student.dateOfBirth ? student.dateOfBirth|date('d/m/Y') : 'Non
                            renseignée' }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Lieu de naissance</h3>
                        <p class="font-semibold">{{ student.placeOfBirth ?: 'Non renseigné' }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Nationalité</h3>
                        <p class="font-semibold">{{ student.nationality ?: 'Non renseignée' }}</p>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-gray-500">Sexe</h3>
                        <p class="font-semibold">
                            {% if student.sex == 'M' %}
                            Masculin
                            {% elseif student.sex == 'F' %}
                            Féminin
                            {% else %}
                            Non renseigné
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Colonne de droite: Accès rapides -->
        <div class="space-y-6">
            <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                <div class="bg-gray-100 p-4">
                    <h2 class="font-semibold">Accès rapides</h2>
                </div>
                <div class="p-6">
                    <div class="space-y-3">
                        <a href="{{ path('student_dashboard') }}"
                            class="flex items-center text-blue-600 hover:text-blue-800">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                            </svg>
                            Retour au tableau de bord
                        </a>
                        <a href="{{ path('student_academic_registration') }}"
                            class="flex items-center text-blue-600 hover:text-blue-800">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Inscription académique
                        </a>
                        <a href="{{ path('student_grades') }}"
                            class="flex items-center text-blue-600 hover:text-blue-800">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                            Voir mes notes
                        </a>
                        <a href="{{ path('student_profile_edit') }}"
                            class="flex items-center text-blue-600 hover:text-blue-800">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            Modifier mon profil
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}