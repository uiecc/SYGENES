{% extends 'base.html.twig' %}

{% block title %}Inscription Académique{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <!-- En-tête de la page -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
        <div class="bg-custom-orange text-white p-4">
            <h1 class="text-xl md:text-2xl font-bold">Inscription Académique</h1>
        </div>
        <div class="p-4 md:p-6">
            <div class="flex flex-col md:flex-row md:items-center justify-between">
                <div>
                    <p class="text-gray-600">Étudiant: <span class="font-semibold">{{ student.firstName }} {{ student.lastName }}</span></p>
                    <p class="text-gray-600">Matricule: <span class="font-semibold">{{ student.matricule }}</span></p>
                </div>
                <div class="mt-4 md:mt-0">
                    <span class="px-4 py-2 bg-yellow-100 text-yellow-800 rounded-full text-sm font-medium">
                        Inscription en cours
                    </span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Instructions -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
        <div class="bg-gray-100 p-4">
            <h2 class="text-lg font-semibold">Instructions pour l'inscription</h2>
        </div>
        <div class="p-6">
            <ol class="list-decimal pl-5 space-y-3">
                <li>Vérifiez les cours obligatoires pour votre niveau qui sont déjà sélectionnés.</li>
                <li>Sélectionnez les cours optionnels que vous souhaitez suivre (respectez le nombre minimal et maximal de crédits).</li>
                <li>Assurez-vous que le total des crédits est conforme aux exigences de votre programme.</li>
                <li>Soumettez votre demande d'inscription pour validation par l'administration.</li>
            </ol>
        </div>
    </div>
    
    <!-- Formulaire d'inscription -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
        <div class="bg-gray-100 p-4 flex justify-between items-center">
            <h2 class="text-lg font-semibold">Cours disponibles</h2>
            <div class="text-sm font-medium bg-blue-100 text-blue-800 py-1 px-3 rounded-full">
                Total crédits: <span id="total-credits">0</span> / 30
            </div>
        </div>
        <div class="p-4">
            <form action="#" method="post">
                <div class="mb-6">
                    <h3 class="font-semibold text-gray-700 mb-2">Cours obligatoires</h3>
                    <div class="bg-gray-50 rounded-lg p-4">
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead>
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cours</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Crédits</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Inscription</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    <tr>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">MATH101</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Mathématiques fondamentales</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">6</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm">
                                            <input type="checkbox" name="courses[]" value="MATH101" checked disabled class="rounded text-custom-orange focus:ring-custom-orange">
                                            <input type="hidden" name="courses[]" value="MATH101">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">PHYS101</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Physique générale</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">4</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm">
                                            <input type="checkbox" name="courses[]" value="PHYS101" checked disabled class="rounded text-custom-orange focus:ring-custom-orange">
                                            <input type="hidden" name="courses[]" value="PHYS101">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">INFO101</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Introduction à l'informatique</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">5</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm">
                                            <input type="checkbox" name="courses[]" value="INFO101" checked disabled class="rounded text-custom-orange focus:ring-custom-orange">
                                            <input type="hidden" name="courses[]" value="INFO101">
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="mb-6">
                    <h3 class="font-semibold text-gray-700 mb-2">Cours optionnels <span class="text-sm font-normal text-gray-500">(Choisissez au moins 2 cours)</span></h3>
                    <div class="bg-gray-50 rounded-lg p-4">
                        <div class="overflow-x-auto">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead>
                                    <tr>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cours</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Crédits</th>
                                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Inscription</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    <tr>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">CHEM101</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Chimie générale</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">3</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm">
                                            <input type="checkbox" name="courses[]" value="CHEM101" class="course-checkbox rounded text-custom-orange focus:ring-custom-orange" data-credits="3">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">BIO101</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Biologie cellulaire</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">4</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm">
                                            <input type="checkbox" name="courses[]" value="BIO101" class="course-checkbox rounded text-custom-orange focus:ring-custom-orange" data-credits="4">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">STAT101</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Statistiques et probabilités</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">3</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm">
                                            <input type="checkbox" name="courses[]" value="STAT101" class="course-checkbox rounded text-custom-orange focus:ring-custom-orange" data-credits="3">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">ECON101</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Introduction à l'économie</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">3</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm">
                                            <input type="checkbox" name="courses[]" value="ECON101" class="course-checkbox rounded text-custom-orange focus:ring-custom-orange" data-credits="3">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">LANG101</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">Anglais académique</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-700">2</td>
                                        <td class="px-4 py-3 whitespace-nowrap text-sm">
                                            <input type="checkbox" name="courses[]" value="LANG101" class="course-checkbox rounded text-custom-orange focus:ring-custom-orange" data-credits="2">
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                
                <div class="mt-8 flex justify-end">
                    <button type="submit" class="px-6 py-3 bg-custom-orange text-white rounded-full shadow hover:bg-custom-orange/90 transition-colors">
                        Soumettre mon inscription
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Calculer le total des crédits
    document.addEventListener('DOMContentLoaded', function() {
        // Crédits des cours obligatoires
        const requiredCredits = 15; // 6 + 4 + 5
        let totalCredits = requiredCredits;
        
        // Mettre à jour le compteur
        document.getElementById('total-credits').textContent = totalCredits.toString();
        
        // Ajouter des écouteurs d'événements pour les cases à cocher
        const checkboxes = document.querySelectorAll('.course-checkbox');
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                const credits = parseInt(this.getAttribute('data-credits'));
                
                if (this.checked) {
                    totalCredits += credits;
                } else {
                    totalCredits -= credits;
                }
                
                // Mettre à jour le compteur
                document.getElementById('total-credits').textContent = totalCredits.toString();
                
                // Changer la couleur en fonction du total
                const totalElement = document.getElementById('total-credits').parentNode;
                if (totalCredits < 24) {
                    totalElement.classList.remove('bg-green-100', 'text-green-800', 'bg-red-100', 'text-red-800');
                    totalElement.classList.add('bg-yellow-100', 'text-yellow-800');
                } else if (totalCredits > 32) {
                    totalElement.classList.remove('bg-green-100', 'text-green-800', 'bg-yellow-100', 'text-yellow-800');
                    totalElement.classList.add('bg-red-100', 'text-red-800');
                } else {
                    totalElement.classList.remove('bg-yellow-100', 'text-yellow-800', 'bg-red-100', 'text-red-800');
                    totalElement.classList.add('bg-green-100', 'text-green-800');
                }
            });
        });
    });
</script>
{% endblock %}