{# templates/student/profile_edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <!-- En-tête de la page -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
        <div class="bg-custom-orange text-white p-4">
            <h1 class="text-xl md:text-2xl font-bold">Modifier mon profil</h1>
        </div>
    </div>
    
    <!-- Formulaire -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
        <div class="p-6">
            {% for flashError in app.flashes('error') %}
                <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
                    <p>{{ flashError }}</p>
                </div>
            {% endfor %}
            
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <h2 class="text-lg font-semibold mb-4">Informations personnelles</h2>
                        
                        <div class="mb-4">
                            {{ form_label(form.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.firstName) }}
                            {{ form_errors(form.firstName, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                            <p class="text-gray-500 text-xs mt-1">Ce champ ne peut pas être modifié.</p>
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.lastName) }}
                            {{ form_errors(form.lastName, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                            <p class="text-gray-500 text-xs mt-1">Ce champ ne peut pas être modifié.</p>
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.sex, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.sex) }}
                            {{ form_errors(form.sex, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                            <p class="text-gray-500 text-xs mt-1">Ce champ ne peut pas être modifié.</p>
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.dateOfBirth, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.dateOfBirth) }}
                            {{ form_errors(form.dateOfBirth, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                            <p class="text-gray-500 text-xs mt-1">Ce champ ne peut pas être modifié.</p>
                        </div>
                    </div>
                    
                    <div>
                        <h2 class="text-lg font-semibold mb-4">Informations de contact</h2>
                        
                        <div class="mb-4">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.phoneNumber, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.phoneNumber) }}
                            {{ form_errors(form.phoneNumber, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.placeOfBirth, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.placeOfBirth) }}
                            {{ form_errors(form.placeOfBirth, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.nationality, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.nationality) }}
                            {{ form_errors(form.nationality, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                    </div>
                </div>
                
                <div class="mt-8 border-t border-gray-200 pt-8">
                    <h2 class="text-lg font-semibold mb-4">Changer de mot de passe</h2>
                    <p class="text-gray-600 mb-4">Laissez ces champs vides si vous ne souhaitez pas changer de mot de passe.</p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="mb-4">
                            {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.currentPassword) }}
                            {{ form_errors(form.currentPassword, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                        
                        <div></div> <!-- Espace vide pour l'alignement -->
                        
                        <div class="mb-4">
                            {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.newPassword.first) }}
                            {{ form_errors(form.newPassword.first, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                        
                        <div class="mb-4">
                            {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.newPassword.second) }}
                            {{ form_errors(form.newPassword.second, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                        </div>
                    </div>
                </div>
                
                <div class="flex justify-between items-center pt-4 mt-8 border-t border-gray-200">
                    <a href="{{ path('student_profile') }}" class="text-gray-600 hover:text-gray-800">
                        Annuler
                    </a>
                    <button type="submit" class="px-4 py-2 bg-custom-orange text-white rounded-md hover:bg-custom-orange/90 transition-colors">
                        Enregistrer les modifications
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}