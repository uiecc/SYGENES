{% extends 'base_dashboard.html.twig' %}

{% block title %}Tableau de bord étudiant{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <!-- En-tête du tableau de bord -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
        <div class="bg-custom-orange text-white p-4">
            <h1 class="text-xl md:text-2xl font-bold">Tableau de bord - {{ student.firstName }} {{ student.lastName }}</h1>
        </div>
        <div class="p-4 md:p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="border-r border-gray-200 pr-4">
                    <h3 class="text-gray-500 text-sm uppercase">Matricule</h3>
                    <p class="font-semibold">{{ student.matricule }}</p>
                </div>
                <div class="border-r border-gray-200 pr-4 md:pl-4">
                    <h3 class="text-gray-500 text-sm uppercase">Niveau</h3>
                    <p class="font-semibold">{{ level.name }}</p>
                </div>
                <div class="md:pl-4">
                    <h3 class="text-gray-500 text-sm uppercase">Filière</h3>
                    <p class="font-semibold">{{ level.field.name }}</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Cartes principales -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Carte profil -->
        <a href="{{ path('student_profile') }}" class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
            <div class="bg-blue-600 h-2"></div>
            <div class="p-5">
                <div class="flex items-center mb-4">
                    <div class="bg-blue-100 p-3 rounded-full mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                    </div>
                    <h2 class="text-lg font-semibold">Mon Profil</h2>
                </div>
                <p class="text-gray-600">Consultez et mettez à jour vos informations personnelles.</p>
            </div>
        </a>
        
        <!-- Carte inscription académique -->
        <a href="{{ path('student_academic_registration') }}" class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
            <div class="bg-green-600 h-2"></div>
            <div class="p-5">
                <div class="flex items-center mb-4">
                    <div class="bg-green-100 p-3 rounded-full mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <h2 class="text-lg font-semibold">Inscription Académique</h2>
                </div>
                <p class="text-gray-600">Inscrivez-vous aux cours pour l'année académique en cours.</p>
            </div>
        </a>
        
        <!-- Carte notes -->
        <a href="{{ path('student_grades') }}" class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden">
            <div class="bg-purple-600 h-2"></div>
            <div class="p-5">
                <div class="flex items-center mb-4">
                    <div class="bg-purple-100 p-3 rounded-full mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                    </div>
                    <h2 class="text-lg font-semibold">Mes Notes</h2>
                </div>
                <p class="text-gray-600">Consultez vos résultats académiques et relevés de notes.</p>
            </div>
        </a>
    </div>
    
    <!-- Informations supplémentaires -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
        <div class="bg-gray-100 p-4">
            <h2 class="text-lg font-semibold">Informations importantes</h2>
        </div>
        <div class="p-4">
            <div class="border-l-4 border-yellow-500 bg-yellow-50 p-4 mb-4">
                <h3 class="font-semibold text-yellow-800">Rappel</h3>
                <p class="text-yellow-700">N'oubliez pas de compléter votre inscription académique avant la date limite.</p>
            </div>
            
            <div class="border-l-4 border-blue-500 bg-blue-50 p-4">
                <h3 class="font-semibold text-blue-800">Calendrier universitaire</h3>
                <p class="text-blue-700">Les examens du premier semestre débuteront le 15 janvier 2025.</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}