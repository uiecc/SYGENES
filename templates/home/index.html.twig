{% extends 'base.html.twig' %}

{% block title %}
{{ 'home_page.title'|trans }}
{% endblock %}

{% block body %}


{# Hero Section #}
<div class="min-h-screen relative bg-[url('{{ asset('/icons/uiecc_logo_1.svg') }}')] bg-cover bg-center">
    
    {# Actual Hero Section #}
    <div class="relative pt-32 pb-32 flex flex-col items-center justify-center text-center px-4">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 max-w-xl line-clamp-2">
            {{ 'home_page.heading_part_1'|trans }} <span class="text-custom-orange">{{ 'home_page.heading_part_2'|trans }}</span> {{ 'home_page.heading_part_3'|trans }}
        </h1>
        <p class="max-w-lg text-md text-gray-600 dark:text-gray-300 mb-8">
            {{ 'home_page.description'|trans }}
        </p>
        <a href="#" class="px-8 py-3 rounded-full bg-custom-orange text-white font-medium hover:bg-opacity-90 transition-colors duration-300">
            {{ 'home_page.cta'|trans }}
        </a>
    </div>

    {# App Mockups #}
    <div class="relative max-w-6xl mx-auto h-[600px] mt-16">
        <div class="absolute left-1/2 transform -translate-x-1/2 -translate-y-1/4 w-4/5 z-20">
            <img src="/path/to/main-mockup.jpg" alt="Main Interface" class="w-full rounded-lg shadow-2xl">
        </div>
        <div class="absolute left-[15%] top-[60%] w-1/3 z-10">
            <img src="/path/to/left-mockup.jpg" alt="Feature Interface" class="w-full rounded-lg shadow-xl">
        </div>
        <div class="absolute right-[15%] top-[40%] w-1/3 z-30">
            <img src="/path/to/right-mockup.jpg" alt="Mobile Interface" class="w-full rounded-lg shadow-xl">
        </div>
    </div>

</div>

{# Feature Section #}
<section id="features" class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-16">{{ 'home_page.features.title'|trans }}</h2>
        {# Feature content placeholder #}
    </div>
</section>

{# Pricing Section #}
<section id="pricing" class="py-20">
    <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-16">{{ 'home_page.pricing.title'|trans }}</h2>
        {# Pricing content placeholder #}
    </div>
</section>

{# FAQ Section #}
<section id="faq" class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-16">{{ 'home_page.faq.title'|trans }}</h2>
        {# FAQ content placeholder #}
    </div>
</section>

{# Contact Section #}
<section id="contact" class="py-20">
    <div class="max-w-7xl mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-16">{{ 'home_page.contact.title'|trans }}</h2>
        {# Contact form placeholder #}
    </div>
</section>
{% endblock %}
