{% extends 'base.html.twig' %}

{% block title %}
	{{ 'home_page.title'|trans }}
{% endblock %}

{% block body %}


	{# Hero Section #}
	<div class="w-full relative bg-[url('/images/background/hero_section.svg')] bg-cover bg-center bg-no-repeat">
		<div class="max-w-[1400px] mx-auto">
			{# This matches parent width #}
			{# Hero content #}
				<div class="relative pt-32 pb-32 flex flex-col items-center justify-center text-center px-4"> <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6 max-w-xl line-clamp-2">
					{{ 'home_page.heading_part_1'|trans }}
					<span class="text-custom-orange">{{ 'home_page.heading_part_2'|trans }}</span>
					{{ 'home_page.heading_part_3'|trans }}
				</h1>
				<p class="max-w-lg text-md text-gray-600 dark:text-gray-300 mb-8">
					{{ 'home_page.description'|trans }}
				</p>
				<a href="#" class="px-8 py-3 rounded-full bg-custom-orange text-white font-medium hover:bg-opacity-90 transition-colors duration-300">
					{{ 'home_page.cta'|trans }}
				</a>
			</div>

			{# App Mockups #}
			<div class="relative max-w-6xl mx-auto h-[600px] mt-16">
				<div class="absolute left-1/2 transform -translate-x-1/2 -translate-y-1/4 w-4/5 z-20">
					<img src="/images/mock-ups/dashboard.png" alt="Main Interface" class="w-full rounded-lg shadow-2xl">
				</div>
				<div class="absolute left-[15%] top-[60%] w-1/3 z-10">
					<img src="/images/mock-ups/dunno.png" alt="Feature Interface" class="w-full rounded-lg shadow-xl">
				</div>
				<div class="absolute right-[15%] top-[40%] w-1/3 z-30">
					<img src="/images/mock-ups/manager.png" alt="Mobile Interface" class="w-full rounded-lg shadow-xl">
				</div>
			</div>

		</div>
	</div>

	{# Feature Section #}
	<section id="features" class="py-20 bg-gray-50 dark:bg-gray-900">
		<div class="max-w-7xl mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-4">{{ 'home_page.features.title'|trans }}</h2>
			<p class="text-center text-gray-600 dark:text-gray-300 mb-16 max-w-2xl mx-auto">Streamline grade management with our intuitive platform designed for modern educational institutions.</p>

			<div
				class="grid grid-cols-3 gap-8">
				{# Column 1 #}
				<div class="flex items-center">
					<div class="rounded-2xl border border-black/6 p-6 bg-white dark:bg-gray-800">
						<div class="flex items-center mb-4">
							<div class="p-2 bg-custom-orange rounded-full border-2 border-white">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-semibold mb-2">Optimised Processes</h3>
						<p class="text-gray-600 dark:text-gray-300">Automate grade calculations and reporting workflows to save time and reduce errors.</p>
					</div>
				</div>

				{# Column 2 #}
				<div class="space-y-8">
					<div class="rounded-2xl border border-black/6 p-6 bg-white dark:bg-gray-800">
						<div class="flex items-center mb-4">
							<div class="p-2 bg-custom-orange rounded-full border-2 border-white">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-semibold mb-2">Quick Certificates</h3>
						<p class="text-gray-600 dark:text-gray-300">Generate and distribute student certificates with just a few clicks.</p>
					</div>

					<div class="rounded-2xl border border-black/6 p-6 bg-white dark:bg-gray-800">
						<div class="flex items-center mb-4">
							<div class="p-2 bg-custom-orange rounded-full border-2 border-white">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-semibold mb-2">Sleek and Responsive Design</h3>
						<p class="text-gray-600 dark:text-gray-300">Access the platform seamlessly across all devices with our modern interface.</p>
					</div>

					<div class="rounded-2xl border border-black/6 p-6 bg-white dark:bg-gray-800">
						<div class="flex items-center mb-4">
							<div class="p-2 bg-custom-orange rounded-full border-2 border-white">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-semibold mb-2">Extensively Modular</h3>
						<p class="text-gray-600 dark:text-gray-300">Customize the system to match your institution's specific grading requirements.</p>
					</div>
				</div>

				{# Column 3 #}
				<div class="space-y-8 mt-32">
					<div class="rounded-2xl border border-black/6 p-6 bg-white dark:bg-gray-800">
						<div class="flex items-center mb-4">
							<div class="p-2 bg-custom-orange rounded-full border-2 border-white">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0 3.517-1.009 6.799-2.753 9.571m-3.44-2.04l.054-.09A13.916 13.916 0 008 11a4 4 0 118 0c0 1.017-.07 2.019-.203 3m-2.118 6.844A21.88 21.88 0 0015.171 17m3.839 1.132c.645-2.266.99-4.659.99-7.132A8 8 0 008 4.07M3 15.364c.64-1.319 1-2.8 1-4.364 0-1.457.39-2.823 1.07-4"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-semibold mb-2">Available Online and Offline</h3>
						<p class="text-gray-600 dark:text-gray-300">Continue working seamlessly with offline capability and automatic synchronization.</p>
					</div>

					<div class="rounded-2xl border border-black/6 p-6 bg-white dark:bg-gray-800">
						<div class="flex items-center mb-4">
							<div class="p-2 bg-custom-orange rounded-full border-2 border-white">
								<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewbox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
								</svg>
							</div>
						</div>
						<h3 class="text-xl font-semibold mb-2">Exceptionally Robust</h3>
						<p class="text-gray-600 dark:text-gray-300">Built with enterprise-grade security and reliability for your critical academic data.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	{# Pricing Section #}
	<section id="pricing" class="py-20">
		<div class="max-w-7xl mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-16">{{ 'home_page.pricing.title'|trans }}</h2>
			{# Pricing content placeholder #}
		</div>
	</section>

	{# FAQ Section #}
	<section id="faq" class="py-20 bg-gray-50 dark:bg-gray-900">
		<div class="max-w-7xl mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-16">{{ 'home_page.faq.title'|trans }}</h2>
			{# FAQ content placeholder #}
		</div>
	</section>

	{# Contact Section #}
	<section id="contact" class="py-20">
		<div class="max-w-7xl mx-auto px-4">
			<h2 class="text-3xl font-bold text-center mb-16">{{ 'home_page.contact.title'|trans }}</h2>
			{# Contact form placeholder #}
		</div>
	</section>
{% endblock %}
