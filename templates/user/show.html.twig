{# templates/profile/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto py-8">
        <div class="bg-white shadow overflow-hidden sm:rounded-lg">
            <div class="px-4 py-5 sm:px-6">
                <div class="flex items-center">
                    {% if user.profilePhoto %}
                        <img src="{{ asset('uploads/profiles/' ~ user.profilePhoto) }}" 
                             alt="Profile photo" 
                             class="h-20 w-20 rounded-full object-cover">
                    {% else %}
                        <div class="h-20 w-20 rounded-full bg-gray-200 flex items-center justify-center">
                            <span class="text-2xl text-gray-500">
                                {{ user.firstName|first|upper }}{{ user.lastName|first|upper }}
                            </span>
                        </div>
                    {% endif %}
                    <div class="ml-6">
                        <h3 class="text-2xl font-bold text-gray-900">
                            {{ user.firstName }} {{ user.lastName }}
                        </h3>
                        <p class="mt-1 text-sm text-gray-500">
                            {{ user.email }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-200">
                <dl>
                    <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
                        <dt class="text-sm font-medium text-gray-500">Téléphone</dt>
                        <dd class="mt-1 text-sm text-gray-900 sm:col-span-2">{{ user.phoneNumber }}</dd>
                    </div>
                    {# Ajoutez d'autres informations selon votre entité User #}
                </dl>
            </div>
            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <a href="{{ path('app_profile_edit') }}" 
                   class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Modifier le profil
                </a>
            </div>
        </div>
    </div>
{% endblock %}