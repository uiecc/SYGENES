{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="bg-gradient-to-r from-indigo-600 to-indigo-800 text-white p-4">
            <h1 class="text-xl font-semibold">Changer votre mot de passe</h1>
        </div>
        
        <div class="p-6">
            {% for message in app.flashes('success') %}
                <div class="mb-4 p-4 bg-green-100 text-green-700 rounded-md">
                    {{ message }}
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="mb-4 p-4 bg-red-100 text-red-700 rounded-md">
                    {{ message }}
                </div>
            {% endfor %}
            
            {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
                <div class="space-y-2">
                    {{ form_label(form.currentPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.currentPassword, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                    {{ form_errors(form.currentPassword, {'attr': {'class': 'text-red-600 text-sm'}}) }}
                </div>
                
                <div class="space-y-2">
                    {{ form_label(form.newPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.newPassword.first, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                    {{ form_errors(form.newPassword.first, {'attr': {'class': 'text-red-600 text-sm'}}) }}
                </div>
                
                <div class="space-y-2">
                    {{ form_label(form.newPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(form.newPassword.second, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                    {{ form_errors(form.newPassword.second, {'attr': {'class': 'text-red-600 text-sm'}}) }}
                </div>
                
                <div class="flex justify-between pt-4">
                    <a href="{{ path('app_profile_show') }}" class="py-2 px-4 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-colors">
                        Retour au profil
                    </a>
                    <button type="submit" class="py-2 px-4 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">
                        Changer le mot de passe
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}