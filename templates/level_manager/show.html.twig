{% extends 'base.html.twig' %}
{% block title %}Responsable de Niveau{% endblock %}
{% block body %}
    <div class="container mx-auto px-4 py-6">
        <div class="mb-6 flex justify-between items-center">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Détails du Responsable de Niveau</h1>
            <div class="flex space-x-3">
                <a href="{{ path('app_level_manager_index') }}" class="inline-flex items-center px-3 py-2 border border-gray-300 dark:border-gray-600 shadow-sm text-sm font-medium rounded-md text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700">
                    <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Retour à la liste
                </a>
                <a href="{{ path('app_level_manager_edit', {'id': level_manager.id}) }}" class="inline-flex items-center px-3 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-custom-orange hover:bg-custom-orange/90 focus:outline-none">
                    <svg class="h-4 w-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Modifier
                </a>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex flex-col sm:flex-row">
                    <div class="flex-shrink-0 mb-4 sm:mb-0 sm:mr-6">
                        {% if level_manager.profilePhoto %}
                            <img src="{{ level_manager.profilePhoto }}" alt="Photo de profil" class="h-24 w-24 rounded-full object-cover border-2 border-custom-orange">
                        {% else %}
                            <div class="h-24 w-24 rounded-full bg-custom-orange/20 flex items-center justify-center border-2 border-custom-orange">
                                <svg class="h-12 w-12 text-custom-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                        {% endif %}
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">{{ level_manager.firstName }} {{ level_manager.lastName }}</h2>
                        <p class="text-custom-orange">{{ level_manager.function }}</p>
                        <div class="mt-2 text-sm text-gray-500 dark:text-gray-400">{{ level_manager.department }}</div>
                        <div class="mt-2">
                            {% if level_manager.isActive %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
                                    Actif
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200">
                                    Inactif
                                </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">ID</h3>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ level_manager.id }}</p>
                    </div>
                    
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Nom d'utilisateur</h3>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ level_manager.username }}</p>
                    </div>
                    
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Numéro de téléphone</h3>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ level_manager.phoneNumber }}</p>
                    </div>
                    
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">CNI</h3>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ level_manager.cni }}</p>
                    </div>
                    
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Code Resp</h3>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ level_manager.codeResp }}</p>
                    </div>
                    
                    <div>
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Date de création</h3>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">{{ level_manager.createdAt ? level_manager.createdAt|date('Y-m-d H:i:s') : '' }}</p>
                    </div>
                    
                    <div class="md:col-span-2">
                        <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Mot de passe</h3>
                        <p class="mt-1 text-sm text-gray-900 dark:text-white">•••••••••••</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="mt-6">
            {{ include('level_manager/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}