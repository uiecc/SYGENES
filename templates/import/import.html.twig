{% extends 'base.html.twig' %}

{% block title %}Importer les étudiants{% endblock %}

{% block body %}
    <div class="container mx-auto mt-10">
        <h1 class="text-3xl font-bold mb-6">Importer les étudiants</h1>
{% for message in app.flashes('success') %}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">{{ message }}</span>
    </div>
{% endfor %}

{% for message in app.flashes('warning') %}
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline">{{ message }}</span>
    </div>
{% endfor %}
        <form action="{{ path('import_students') }}" method="post" enctype="multipart/form-data" class="space-y-4">
            <div>
                <label for="students_file" class="block text-sm font-medium text-gray-700">Sélectionner le fichier Excel</label>
                <input type="file" name="students_file" id="students_file" required class="mt-1 block w-full">
            </div>
            <div>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    Importer les étudiants
                </button>
            </div>
        </form>
    </div>

    
{% endblock %}
