

{% block title %}<title>Create University</title>{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl w-full space-y-8 bg-white rounded-xl overflow-hidden p-8">
    <div class="flex flex-col md:flex-row">
      <!-- Left side - Image -->
      <div class="w-full md:w-1/2 mb-8 md:mb-0">
        <div class=" hidden md:block relative p-4 md:p-8 flex items-center justify-center">
          <img src="{{ asset('images/illustrations/university.svg') }}" alt="University Creation" class="max-w-full h-auto max-h-full">
          
          
        </div>
      </div>
      
      <!-- Right side - form -->
     <div class="w-full md:w-1/2 md:pl-6 lg:pl-12">
        <div class="bg-white p-4 sm:p-6 rounded-lg shadow-sm">
          <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">Create a university</h2>
          <p class="text-gray-600 mb-6">Let's start by creating a university, enter its information below</p>
          
          {{ form_start(form, {'attr': {'class': 'space-y-5'}}) }}
            <div class="space-y-4">
              <div class="form-group">
                <label for="{{ form.name.vars.id }}" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                {{ form_widget(form.name, {
                  'attr': {
                    'class': 'appearance-none relative block w-full px-4 py-3 border border-gray-300 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-custom-orange focus:border-custom-orange transition-all duration-200 ease-in-out',
                    'placeholder': 'Enter university name'
                  }
                }) }}
                {{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
              </div>
              
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div class="form-group">
                  <label for="{{ form.code.vars.id }}" class="block text-sm font-medium text-gray-700 mb-1">Code</label>
                  {{ form_widget(form.code, {
                    'attr': {
                      'class': 'appearance-none relative block w-full px-4 py-3 border border-gray-300 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-custom-orange focus:border-custom-orange transition-all duration-200 ease-in-out',
                      'placeholder': 'University code'
                    }
                  }) }}
                  {{ form_errors(form.code, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                </div>
                
                <div class="form-group">
                  <label for="{{ form.logo.vars.id }}" class="block text-sm font-medium text-gray-700 mb-1">Logo</label>
                  <div class="relative flex flex-col">
                    {{ form_widget(form.logo, {
                      'attr': {
                        'class': 'hidden',
                        'onchange': 'previewImage(this)'
                      }
                    }) }}
                    <div class="flex items-center">
                      <label for="{{ form.logo.vars.id }}" class="cursor-pointer flex items-center justify-center flex-grow px-4 py-3 border border-gray-300 border-dashed bg-gray-50 rounded-lg hover:bg-gray-100 transition-all duration-200 ease-in-out">
                        <svg class="w-5 h-5 mr-2 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <span class="text-sm text-gray-500">Upload logo</span>
                      </label>
                      <div id="logo-preview" class="ml-2 hidden h-10 w-10">
                        <img id="preview-img" src="#" alt="Preview" class="h-full w-full object-contain rounded border border-gray-200">
                      </div>
                    </div>
                  </div>
                  {{ form_errors(form.logo, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                </div>
              </div>
              
              <div class="form-group">
                <label for="{{ form.address.vars.id }}" class="block text-sm font-medium text-gray-700 mb-1">Address</label>
                {{ form_widget(form.address, {
                  'attr': {
                    'class': 'appearance-none relative block w-full px-4 py-3 border border-gray-300 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-custom-orange focus:border-custom-orange transition-all duration-200 ease-in-out',
                    'placeholder': 'University address'
                  }
                }) }}
                {{ form_errors(form.address, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
              </div>
              
              <div class="form-group">
                <label for="{{ form.description.vars.id }}" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                {{ form_widget(form.description, {
                  'attr': {
                    'class': 'appearance-none relative block w-full px-4 py-3 border border-gray-300 bg-gray-100 rounded-lg focus:outline-none focus:ring-2 focus:ring-custom-orange focus:border-custom-orange transition-all duration-200 ease-in-out',
                    'rows': 6,
                    'placeholder': 'Describe the university'
                  }
                }) }}
                {{ form_errors(form.description, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
              </div>
            </div>
            
            <div class="flex flex-col sm:flex-row justify-between gap-4 mt-8">
              <a href="{{ path('app_university_index') }}" class="order-2 sm:order-1 w-full sm:w-auto flex items-center justify-center px-4 py-2 border border-gray-300 rounded-full text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-all duration-200 ease-in-out shadow-sm">
                <svg class="mr-2 -ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to list
              </a>
              
              <button type="submit" class="order-1 sm:order-2 w-full sm:w-auto inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-full text-white bg-custom-orange hover:bg-custom-orange/90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-custom-orange transition-all duration-200 ease-in-out shadow-md hover:shadow-lg">
                Next
                <svg class="ml-2 -mr-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </button>
            </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Orange dots pattern - positioned absolutely to the container -->
  <div class="absolute bottom-0 left-0 md:left-32 hidden md:grid grid-cols-6 gap-2 p-4">
    {% for i in 1..36 %}
      <div class="h-2 w-2 rounded-full bg-custom-orange"></div>
    {% endfor %}
  </div>
</div>
  </div>
</div>

<script>
function previewImage(input) {
  const preview = document.getElementById('logo-preview');
  const previewImg = document.getElementById('preview-img');
  
  if (input.files && input.files[0]) {
    const reader = new FileReader();
    
    reader.onload = function(e) {
      previewImg.src = e.target.result;
      preview.classList.remove('hidden');
    }
    
    reader.readAsDataURL(input.files[0]);
  }
}
</script>

<style>
@media (max-width: 768px) {
  .form-group {
    margin-bottom: 1rem;
  }
  
  button[type="submit"] {
    margin-top: 1.5rem;
  }
}
</style>
{% endblock %}